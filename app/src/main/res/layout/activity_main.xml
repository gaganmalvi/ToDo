<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.ToDo.AppBarOverlay">

    </com.google.android.material.appbar.AppBarLayout>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:contentDescription="Add task to list."
        android:onClick="fab"
        app:backgroundTint="#FF8400"
        app:rippleColor="#000000"
        app:srcCompat="@android:drawable/ic_menu_save" />

    <ListView
        android:id="@+id/ListItems"
        android:layout_width="wrap_content"
        android:layout_height="544dp"
        android:layout_marginTop="100dp" />

    <EditText
        android:id="@+id/editToDo"
        android:layout_width="301dp"
        android:layout_height="54dp"
        android:layout_gravity="bottom"
        android:layout_marginStart="@dimen/fab_margin"
        android:layout_marginBottom="@dimen/fab_margin"
        android:background="@drawable/edittext"
        android:ems="10"
        android:hint="Enter a task."
        android:inputType="textPersonName"
        android:padding="8dp"
        android:textAlignment="center" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#0000FF"
        app:layout_anchor="@+id/appBarLayout2"
        app:layout_anchorGravity="center"
        app:popupTheme="@style/Theme.ToDo.PopupOverlay" />


</androidx.coordinatorlayout.widget.CoordinatorLayout>