<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.ToDo.AppBarOverlay">

    </com.google.android.material.appbar.AppBarLayout>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:contentDescription="@string/fab_desc"
        android:onClick="fab"
        app:backgroundTint="#FF8400"
        app:rippleColor="#000000"
        app:srcCompat="@android:drawable/ic_input_add"
        app:useCompatPadding="true"/>

    <ListView
        android:id="@+id/ListItems"
        android:layout_width="wrap_content"
        android:layout_height="607dp"

        android:layout_marginTop="100dp" />

    <EditText
        android:id="@+id/editToDo"
        android:layout_width="301dp"
        android:layout_height="51dp"
        android:layout_gravity="bottom"
        android:layout_marginStart="@dimen/fab_margin"
        android:layout_marginBottom="@dimen/fab_margin"
        android:background="@drawable/edittext"
        android:ems="10"
        android:hint="@string/editboxtext"
        android:inputType="textPersonName"
        android:padding="8dp"
        android:gravity="center"
        android:fontFamily="@font/opslate"
        android:textSize="13sp"/>

    <androidx.appcompat.widget.Toolbar
        android:fitsSystemWindows="true"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/transparent"
        app:layout_anchor="@+id/appBarLayout2"
        app:popupTheme="@style/Theme.ToDo.PopupOverlay"
        app:theme="@style/AppTheme.ToolbarFont">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@android:color/white"
            android:fontFamily="@font/opslate"
            android:layout_marginTop="20dp"
            android:textSize="32sp"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_gravity="center"
            />

    </androidx.appcompat.widget.Toolbar>


</androidx.coordinatorlayout.widget.CoordinatorLayout>